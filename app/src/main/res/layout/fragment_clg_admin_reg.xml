<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="12dp"
    tools:context=".fragment.registration.ClgAdminRegFragment">

    <TextView
        android:id="@+id/lblChooseImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose an image for your ID Card (ID will be used as a Proof for your Authentication)"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:max="100"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgSelectImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Choose Image for ID"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:src="@drawable/choose" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnChooseImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round"
            android:text="Choose"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnUploadImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="75dp"
            android:background="@drawable/round"
            android:text="Upload"
            android:textColor="#fff" />

    </RelativeLayout>

</LinearLayout>