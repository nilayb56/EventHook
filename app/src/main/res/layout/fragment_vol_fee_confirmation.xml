<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgapps"
    android:orientation="vertical"
    android:id="@+id/linearCnfFee"
    tools:context=".fragment.volunteer.VolFeeConfirmationFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCnfFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginTop="50dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgAddRole"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/merienda_regular"
                android:text="Confirm Participant Payments"
                android:textColor="#03B08B"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/lblVtrEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Event"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:padding="6dp">

            <ListView
                android:id="@+id/listParticipant"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="#b5b5b5"
                android:dividerHeight="1dp"/>

            <Button
                android:id="@+id/btnPaymentCnf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="Confirm"
                android:textColor="#fff" />

        </LinearLayout>

</LinearLayout>