<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapps"
    tools:context=".CollegeAdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/applogo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="36dp"
                android:text="Admin Corner"
                android:textColor="#03B08B"
                android:textSize="32sp" />

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:background="#E9F6FB"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAddEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgAddEvent"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/event" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Add Events"
                        android:textColor="#6f6f6f"
                        android:textSize="18sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

        <RelativeLayout
            android:id="@+id/rlAddEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/lblData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select College"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerClg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblData"
                android:layout_marginTop="12dp"
                ></Spinner>

            <TextView
                android:id="@+id/lblEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Name of the Event"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@+id/spinnerClg"/>

            <EditText
                android:id="@+id/txtAddEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Name"
                android:textSize="18sp"
                android:layout_below="@+id/lblEvent"/>

            <CheckBox
                android:id="@+id/checkPrivateEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAddEvent"
                android:text="Private Event"
                android:textSize="18sp"/>

            <CheckBox
                android:id="@+id/checkGroupEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAddEvent"
                android:text="Group Event"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"/>

            <EditText
                android:id="@+id/txtGroupMembers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of Group Members"
                android:textSize="18sp"
                android:layout_below="@+id/checkGroupEvent"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/lblRegStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Registration Start Date"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@+id/txtGroupMembers"/>

            <EditText
                android:id="@+id/txtRegStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:clickable="true"
                android:inputType="none"
                android:focusable="false"
                android:longClickable="false"
                android:textSize="18sp"
                android:layout_below="@+id/lblRegStart"/>

            <TextView
                android:id="@+id/lblRegEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Registration End Date"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@+id/txtRegStart"/>

            <EditText
                android:id="@+id/txtRegEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:clickable="true"
                android:focusable="false"
                android:longClickable="false"
                android:inputType="none"
                android:textSize="18sp"
                android:layout_below="@+id/lblRegEnd"/>

            <TextView
                android:id="@+id/lblEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Event Date"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@+id/txtRegEnd"/>

            <EditText
                android:id="@+id/txtEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:clickable="true"
                android:focusable="false"
                android:longClickable="false"
                android:inputType="none"
                android:textSize="18sp"
                android:layout_below="@+id/lblEventDate"/>

            <TextView
                android:id="@+id/lblCancelDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Last Cancellation Date"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@+id/txtEventDate"/>

            <EditText
                android:id="@+id/txtCancelDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:clickable="true"
                android:focusable="false"
                android:longClickable="false"
                android:inputType="none"
                android:textSize="18sp"
                android:layout_below="@+id/lblCancelDate"/>

            <TextView
                android:id="@+id/lblEventFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Registration Fees:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/txtCancelDate"/>

            <EditText
                android:id="@+id/txtEventFees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Registration Fees"
                android:textSize="18sp"
                android:layout_below="@id/lblEventFees"/>

            <Button
                android:id="@+id/btnAddEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:text="Add"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/txtEventFees"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlUploadImg"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:id="@+id/lblChooseImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose an image of the Event"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgSelectImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/choose"
                android:layout_below="@+id/lblChooseImg"
                />
            <Button
                android:id="@+id/btnChooseImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:text="Choose"
                android:textColor="#fff"
                android:layout_below="@id/imgSelectImg"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="75dp"
                android:layout_alignParentLeft="true"/>

            <Button
                android:id="@+id/btnUploadImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:text="Upload"
                android:textColor="#fff"
                android:layout_below="@id/imgSelectImg"
                android:layout_marginTop="5dp"
                android:layout_marginRight="75dp"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

    </LinearLayout>

    </LinearLayout>

</ScrollView>