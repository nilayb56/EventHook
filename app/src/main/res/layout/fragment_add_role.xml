<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="10dp"
    tools:context=".fragment.admin.AddRoleFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAddRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="18dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="18dp">

                <ImageView
                    android:id="@+id/imgAddRole"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/userrole" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/merienda_regular"
                    android:text="Add User Role"
                    android:textColor="#03B08B"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/lblAddRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardAddRole"
            android:layout_marginTop="10dp"
            android:text="Enter Name of New User Role"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/txtAdminAddRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblAddRole"
            android:layout_marginTop="10dp"
            android:hint="Role Name"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnAddRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAdminAddRole"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round"
            android:text="Add"
            android:textColor="#fff" />

    </RelativeLayout>

</ScrollView>